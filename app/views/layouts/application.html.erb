<!DOCTYPE html>
<html>
  <head>
    <title>Hnefatafl</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar fixed-top navbar-toggleable-md header-color">
        <span class="links">
          <div class="text-center navbar-info">
            <span class="link">
              <a class="fa fa-linkedin-square fa-3x make-it-green" href="https://www.linkedin.com/in/andy-strube-6231ba152/"></a>
            </span>
            <span class="link">
              <a class="fa fa-github-square fa-3x make-it-green" href="https://github.com/Learningstuff98/Hnefatafl"></a>
            </span>
            <span class="link">
              <a class="fa fa-file-text fa-3x make-it-green" href="https://docs.google.com/document/d/1qm4nBdIZfsx8zh4IwYvkVuQYclpOXUCVxnC9vV3_eBM/edit"></a>
            </span>
              <h4><%= link_to 'Viking Chess Homepage', root_path, class: "make-it-green" %></h4>
              <div>
                <% if current_user %>
                  <div class="make-it-green">
                    <%= "Logged in as #{current_user.username}" %>
                  </div>
                <% end %>
              </div>
          </div>
        </span>
      </nav>
      <br/><br/><br/><br/><br/><br/>

      <div class="flash-notice make-it-green">
        <h4>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </h4>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
