<!DOCTYPE html>
<html>
  <head>
    <title>Hnefatafl</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar fixed-top navbar-toggleable-md header-color">
        <div id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <span> 
              <span class="nav-item">
                <h3 class="homepage_link">
                  <%= link_to 'Hnefatafl Viking Chess Homepage', root_path, class: "make-it-green" %>
                </h3>
                <div>
                  <% if !current_user %>
                    <%= link_to 'Sign up', new_user_registration_path, class: "make-it-green" %>
                    <br/>
                    <%= link_to 'Log in', new_user_session_path, class: "make-it-green" %>
                  <% end %>
                  <% if current_user %>
                    <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "make-it-green" %>
                    <div class="make-it-green">
                      <%= "Logged in as #{current_user.username}" %>
                    </div>
                  <% end %>
                </div>
              </span>
            </span>
          </ul>
        </div>
      </nav>
    </div>
    <br/><br/>

    <br/><br/><br/>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
